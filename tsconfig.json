{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "rootDir": "src",
        "outDir": "lib",
        "strict": true,
		"declarationMap": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "error",
		"inlineSources": true,
		"newLine": "lf",
		"noEmitHelpers": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
    },
    "include": ["src"], 
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
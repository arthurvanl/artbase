{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./src/",
        "outDir": "./lib/",
        "strict": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
        "baseUrl": "./"
    },
    "include": [ "src" ],
    "exclude": [
        "node_modules",
        "dist"
    ],
} 